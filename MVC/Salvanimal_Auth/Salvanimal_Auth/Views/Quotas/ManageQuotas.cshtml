@model IEnumerable<Salvanimal_Auth.Models.Quotas>

@{
    ViewBag.Title = "Gerir Quotas";
}

<h2>Gerir Quotas</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset class="float-left">
        <div class="float-left half-width">
            <p>
                @Html.ActionLink("Registar Quota", "Create")
            </p>
        </div>
        <div class="float-right">
            <input name="searchName" type="text" />
            <input type="submit" value="Procurar" />
        </div>
    </fieldset>
}
<div class="scrollable-master-div">
    <table class="table table-hover table-bordered table-striped">
        <tr>
            <th>
                Id
            </th>
            <th>
                Socio
            </th>
            <th>
                Descricao
            </th>
            <th>
                Valor            
            </th>
            <th>
                Data
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUsers.UserName)
                </td>
                <td>
                    <div class="scrollable-in-td">@Html.DisplayFor(modelItem => item.Descricao)</div>
                </td>
                <td>
                    @item.Data.ToString("MMMM yyyy")
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>