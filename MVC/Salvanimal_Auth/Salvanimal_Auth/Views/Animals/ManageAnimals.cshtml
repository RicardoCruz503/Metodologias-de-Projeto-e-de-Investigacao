@model IEnumerable<Salvanimal_Auth.Models.Animals>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<fieldset class="float-left">
    <div class="float-left half-width">
        <p>
            @Html.ActionLink("Adicionar Animal", "Create")
        </p>
    </div>
    <div class="float-right">
        <input name="searchName" type="text" />
        <input type="submit" value="Procurar" />
    </div>
</fieldset>
}
<table class="table table-hover table-bordered" style="background-color:white">
    <tr>
        <th>
            Id
        </th>
        <th>
            Especie
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Raca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observacoes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especies.NomeEspecie)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.Id)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Especies.NomeEspecie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Raca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacoes)
            </td>
            <td>

                <img src="@item.Imagem" style="width:25px; height:25px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especies.NomeEspecie)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
